{
  "name": "client-realtime-chat-pager",
  "version": "1.0.0",
  "description": "Web App to connect to realtime chat",
  "author": {
    "name": "Eliecer Chicott"
  },
  "main": "/src/js/index.js",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "eslint-fix": "eslint --fix --ext .js --ext .jsx \"src/js/**/*\"",
    "build": "NODE_ENV=production webpack --mode production",
    "deploy": "webpack --mode production && firebase deploy --only hosting",
    "test": "jest"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^7.0.0",
    "react-test-renderer": "^16.12.0",
    "sass-loader": "^8.0.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/js/setupTests.js"
    ],
    "moduleNameMapper": {
      "^Lib(.*)$": "<rootDir>/src/js/lib$1",
      "^Components(.*)$": "<rootDir>/src/js/components$1",
      "\\.(scss|sass|css)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
